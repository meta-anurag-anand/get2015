<apex:page standardController="Class__c" sidebar="false" showHeader="false" id="Page">
   <script src="/soap/ajax/20.0/connection.js" type="text/javascript">
  </script>
  <script>
  /**
   *Name: saveStudentRecord
   *Description: Adds the Student With 
   *param
   *return
   */
  function saveStudentRecord() {
  
      sforce.connection.sessionId = "{!$Api.Session_ID}";
      //Creating New Account Record.
      
      var student = new sforce.SObject("student__c");
      //Getting Account Name from inputText.
      
      var name = document.getElementById('{!$Component.TextBoxForm.TextBoxFormPB.TextBoxFormPBS.TextBoxFormPBSI.Name}').value;
      if(name==null || name.trim()=='')
      {
          alert('please enter name');
          return false;
      }
      student.LastName__c = name;
      student.Class__c ='{!Class__c}';
      // This is the line where magic happens, calling Create() method.
      
      var result = sforce.connection.create([student]);
      if (result[0].getBoolean("success")) {
          alert("New student is created with id " + result[0].id);
      } 
      else {
          alert("failed to create new student " + result[0]);
      }    
  }
  </script>
  <apex:form id="TextBoxForm">
      
      <apex:pageBlock id="TextBoxFormPB">
          <apex:pageBlockSection id="TextBoxFormPBS">
              <apex:pageBlockSectionItem id="TextBoxFormPBSI">
                 Student LastName<apex:inputText id="Name"  ></apex:inputText>
              </apex:pageBlockSectionItem>
          </apex:pageBlockSection>
          <apex:pageBlockButtons >
              <apex:commandButton onclick="return saveStudentRecord()" value="save" />
           </apex:pageBlockButtons>
       </apex:pageBlock>
   </apex:form>
</apex:page>