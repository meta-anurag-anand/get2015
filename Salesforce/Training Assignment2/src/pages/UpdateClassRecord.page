<apex:page standardController="Class__c">
	<apex:includescript value="/soap/ajax/30.0/connection.js"></apex:includescript>
	<apex:includescript value="/soap/ajax/30.0/apex.js"></apex:includescript>
	<apex:form >
		<!-- Page BLock Which contains the Class Name And Save Button -->
		<apex:pageBlock >
			<apex:pageBlockSection >
                Class Name:
                <input title="id" id="classId"
					value="{!Class__c.Name__c}" />
				<br />
			</apex:pageBlockSection>
			<apex:pageBlockButtons >
				<apex:commandButton value="Save" onclick="saveRecords();" />
			</apex:pageBlockButtons>
		</apex:pageBlock>
	</apex:form>
	<script>
		parent = window.parent;
		/**
		 * Name: saveRecords
		 * Description: Save the Updated Record
		 * Param:
		 * return:
		 */
		function saveRecords() {
			sforce.connection.sessionId = "{!$Api.Session_ID}";
			var class1 = new sforce.SObject("Class__c");
			//Gets The Id
			class1.Name__c = document.getElementById('classId').value;
			class1.Id = '{!Class__c}';
			//Upserts the Result
			result = sforce.connection.upsert("Id", [ class1 ]);
			window.close();
		}
	</script>
</apex:page>